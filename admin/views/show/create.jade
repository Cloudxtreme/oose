extends ../layout
block content
  .container
    h1 Create Show
    +alerts()
    form.form-horizontal(action='/show/save', method='post', role='form')
      .form-group
        label.control-label.col-sm-2 Title
        .col-sm-10
          input.form-control(type='text', name='title', placeholder='Show Title')
      .form-group
        label.control-label.col-sm-2 URI
        .col-sm-10
          input.form-control(type='text', name='uri', placeholder='Show URI, leave blank for auto generation')
      .form-group
        label.control-label.col-sm-2 Active
        .col-sm-10
          input(type='checkbox', name='active', checked=true)
      .form-group
        label.control-label.col-sm-2 New
        .col-sm-10
          input(type='checkbox', name='new', checked=true)
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save