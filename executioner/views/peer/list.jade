extends ../layout
block append js
  script(src='/js/table.js')
block content
  .container
    +tableHeader('Peers','/peer/create','Create Peer')
    +alerts()
    form(method='post', role='form')
      table.table.table-striped
        tr
          th
            input#toggle(type='checkbox')
          th Hostname
          th IP
          th Version
          th Last Modified
          th Status
        each row,i in list
          tr
            td
              input(type='checkbox', name='remove[]', value=row.id)
            td
              a(href='/peer/edit?id=#{row.id}')= row.hostname
            td= row.ip
            td= row.version
            td= new Date(row.metrics.dateModified).toDateString()
            td= row.status
      div
        .pull-right.btn-group
          a.btn.btn-default(href='/shows?start=#{page.previous}&search=#{search}') Previous
          a.btn.btn-default(href='/shows?start=#{page.next}&search=#{search}') Next
        span #{page.start + 1} - #{page.end} of #{count} entries
        div
          button.btn.btn-warning(name='restart', value='true', type='submit') Restart
          button.btn.btn-primary(name='upgrade', value='true', type='submit') Upgrade
          button.btn.btn-success(name='start', value='true', type='submit') Start
          button.btn.btn-danger(name='stop', value='true', type='submit') Stop
          button.btn.btn-danger#tableDelete(name='delete', value='true', type='submit') Delete Checked